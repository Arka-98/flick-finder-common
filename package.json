{
  "name": "@flick-finder/common",
  "version": "1.4.7",
  "description": "Nest common utilities library for Flick Finder microservices",
  "main": "./dist/libs/common/index.js",
  "keywords": [
    "flick-finder",
    "common",
    "nest",
    "microservices"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "lint": "tsc",
    "ci": "npm run build && npm run format && npm run check-exports && npm run lint",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "local:link": "npm run build && npm link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arka-98/flick-finder-common.git"
  },
  "type": "module",
  "author": "Arkadipta Das",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "@types/express": "^5.0.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@nestjs/cli": "^10.4.7",
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.8",
    "@nestjs/swagger": "^8.1.0",
    "@swc/core": "^1.10.4",
    "@types/mongoose": "^5.11.97",
    "express": "^4.21.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.8.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "exports": {
    ".": {
      "import": "./dist/libs/common/index.js",
      "default": "./dist/libs/common/index.cjs"
    }
  },
  "types": "./dist/libs/common/index.d.ts"
}
